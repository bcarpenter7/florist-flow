<%- include('../partials/header') %>

<form id="newFlowerForm" action="/prices/<%= price.id %>?_method=PUT"  method="POST">
   <h1>Edit Event Details</h1>
   <label>Plant Name:</label><input type="text" name="plantName" value="<%= price.plantName %>" required>
   <label>Price Per Bundle:</label><input name="price" value="<%=price.price %>" required>
   <label>Plants Per bundle:</label><input type="text" name="bundle" value="<%=price.bundle %>" required>
   <label>Type:</label>
   <select type="text" name="isFlower" required>
      <option value="<%=price.isFlower %>"><%=price.isFlower %></option>
      <option value="Green">Green</option>
      <option value="Flower">Flower</option>
   </select>

   <button type="submit" id="newBtn">Save Changes</button>
</form>
<%- include('../partials/footer') %>