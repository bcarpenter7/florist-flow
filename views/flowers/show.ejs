


<%- include('../partials/header') %>
    <h2>View Order: <span><%= flower.name %></span></h2>
    <div id="showDiv">
        <label><span class="showTitles">Name:</span> <%=flower.name %></label>
        <label><span class="showTitles">Date of Wedding:</span> <%=flower.dateOfWedding %></label>

        <% flower.flowerName.forEach((f, i) => {  %>
        <label><span class="showTitles">Flower #<%= i + 1%>:</span> <%=f %></label>
        <label><span class="showTitles">Flower #<%= i + 1%> Amount:</span> <%=flower.flowerAmount[i]  %></label>
        <% }) %>
     

        <label><span class="showTitles">Greenery #1 Name:</span> <%=flower.greenName %></label>
        <label><span class="showTitles">Greenery #1 Amount:</span> <%=flower.greenAmount %></label>
        <a href="/flowers/<%= flower.id %>/edit">Edit Wedding Details</a>
    </div>

    <div id="priceDiv">

        <h2>Price Breakdown</h2>
        <!-- <label><span class="showTitles">Flower #1:</span> <%=flower.flowerOneName %></label>
        <label><span class="showTitles">Flower #1 Amount:</span> <%=flower.flowerOneAmount %></label>
        <label><span class="showTitles">Greenery #1 Name:</span> <%=flower.greensOneName %></label>
        <label><span class="showTitles">Greenery #1 Amount:</span> <%=flower.greensOneAmount %></label> -->
            <% let total = 0; %>
        <table id="priceBreakdownTable">
            <tr>
              <th>Selection</th>
              <th>Plant Name</th>
              <th>Per Stem Amount</th>
              <th>Price Per Stem</th>
              <th>Total Per Stem</th>
              <th>Bundles Needed</th>
            </tr>

            <% flower.flowerName.forEach((f, i) => {  %>
                <% let curPrice = price.find((e) => e.flowerName === f).price %>
                <tr>
                    <td><span class="showTitles">Flower #<%= i + 1 %></span></td>
                    <td><%=f %></td>
                    <td class="centerText"><%=flower.flowerAmount[i] %></td>
                    <td class="centerText"><%= curPrice %></td>   
                    <td class="centerText"><%=flower.flowerAmount[i] * curPrice %> <% total+= flower.flowerAmount[i] * curPrice %></td>
                </tr>

           <% }) %>
        </table>
        <h2>Total Price of Flowers: $<%= total %></h2>
    </div>


<%- include('../partials/footer') %>